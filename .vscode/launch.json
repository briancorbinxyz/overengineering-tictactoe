{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "org.example.App",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "GameClient",
            "request": "launch",
            "mainClass": "org.example.GameClient",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "GameClient (on ZGC)",
            "request": "launch",
            "vmArgs": "-XX:+UseZGC -XX:+ZGenerational",
            "mainClass": "org.example.GameClient",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "GameServer",
            "request": "launch",
            "mainClass": "org.example.GameServer",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "GameServer (on ZGC)",
            "request": "launch",
            "vmArgs": "-XX:+UseZGC -XX:+ZGenerational",
            "mainClass": "org.example.GameServer",
            "projectName": "app"
        }
]
}